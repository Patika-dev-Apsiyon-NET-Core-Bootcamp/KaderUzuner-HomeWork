@model BookInSession.Models.BookViewModel


<h2>Add Book</h2>
<hr />
<form asp-controller="Home" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Author"></label>
        <input asp-for="Author" class="form-control" />
        <span asp-validation-for="Author"></span>
    </div>
    <div class="form-group">
        <label asp-for="PublishYear"></label>
        <input asp-for="PublishYear" class="form-control" />
        <span asp-validation-for="PublishYear"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <input asp-for="CategoryId" class="form-control" />
        <span asp-validation-for="CategoryId"></span>
    </div>
    <input type="submit" value="Add" class="btn btn-sm btn-success" />
</form>